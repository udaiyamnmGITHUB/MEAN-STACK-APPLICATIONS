{
  "rules": {
    "semi": [2, "always"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "strict": [2, "global"],
    "no-console": [1],
    "linebreak-style": [2, "unix"],
    "no-var": [2],
    "prefer-const": [2],
    "arrow-parens": [2],
    "arrow-spacing": [2],
    "space-in-parens": [2, "never"],
    "object-shorthand": [2, "always"],
    "constructor-super": [2],
    "no-this-before-super": [2]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ]
}
